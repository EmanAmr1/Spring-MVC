<?xml version="1.0" encoding="UTF-8" ?>
<web-app  version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>dispatcher</servlet-name> <!-- servlet-name is mandatory -->
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> <!-- servlet-class is mandatory -->
  </servlet>

  <!-- Map the DispatcherServlet to handle all requests -->
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/home.com/*</url-pattern>
    <!-- This mapping directs all requests to the DispatcherServlet -->
  </servlet-mapping>



</web-app>
